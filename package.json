{
  "name": "@exaudeus/workrail",
  "version": "0.8.6",
  "description": "MCP server for structured workflow orchestration and step-by-step task guidance",
  "license": "MIT",
  "bin": {
    "workrail": "dist/mcp-server.js"
  },
  "files": [
    "dist",
    "spec",
    "workflows",
    "web"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "release": "bash -c './scripts/release.sh'",
    "dev": "npm run build && node dist/mcp-server.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "validate:workflows": "bash scripts/validate-workflows.sh",
    "precommit": "npm run validate:workflows",
    "preinstall": "node -e \"const v=parseInt(process.versions.node.split('.') [0],10); if(v<20){console.error('WorkRail requires Node.js >=20. Current: '+process.versions.node+'\\nPlease upgrade: https://nodejs.org/'); process.exit(1);}\"",
    "web:typecheck": "tsc -p tsconfig.web.json",
    "test": "vitest",
    "test:smoke": "vitest tests/smoke/ --reporter=verbose",
    "test:integration": "vitest tests/integration/",
    "test:unit": "vitest tests/unit/",
    "test:perf": "vitest tests/performance/",
    "test:all": "npm run test:smoke && npm run test:integration && npm run test:unit",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "json-rpc-2.0": "^1.7.1",
    "open": "^10.2.0",
    "reflect-metadata": "^0.2.0",
    "semver": "^7.7.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.4"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "workflow",
    "orchestration",
    "ai-assistant",
    "task-management"
  ],
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.9",
    "@types/semver": "^7.7.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^19.0.2",
    "jsdom": "^27.0.0",
    "lit": "^3.3.1",
    "node-fetch": "^2.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
